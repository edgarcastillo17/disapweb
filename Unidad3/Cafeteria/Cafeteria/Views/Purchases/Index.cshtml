@model IEnumerable<Cafeteria.Models.Purchase>

@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-center">
    <h2>¿Esperando tu pedido?</h2>
    <br />
    <br />
</div>

<a class="btn btn-sm btn-success text-white"><i class="fas fa-shopping-cart"></i> ¡Comprar!</a>
<br />
<br />

<div class="row justify-content-center">
    @foreach (var item in ViewBag.Popular)
    {
        if (item.Product.Type == "Bebida caliente")
        {
            <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                <img class="card-img-top" src="@Url.Action("GetImage","Products", new { id = item.Product.Id})" alt="Alternate Text" />
                <div class="card border-bottom-success shadow">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">$@item.Product.Price</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@item.Product.ProductName</div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <hr />
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Details","Products", new { id=item.Id})">Detalles</a>
                                }
                            </div>
                            <div class="col-auto">
                                <i class="fab fa-hotjar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        if (item.Product.Type == "Bebida fría")
        {
            <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                <img class="card-img-top" src="@Url.Action("GetImage","Products", new { item.Product.Id})" alt="Alternate Text" />
