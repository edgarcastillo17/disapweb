@model Eventos.Models.City

@{
    ViewBag.Title = "Ciudades";
}

<div class="row col-md-12">
    <div class="col-md-12 col-md-offset-3">
        <br />
        <h3 class="text-center">Detalles</h3>
    </div>
</div>

<div>
    <h4>Información de la Ciudad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            País:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

    </dl>
</div>

<p>
    <a href="@Url.Action("Edit","Cities",new { id = Model.Id })" class="btn btn-outline-primary btn-sm"><i class="fas fa-pencil-alt"></i> Editar</a>
    <a href="@Url.Action("Index","Cities")" class="btn btn-outline-dark btn-sm"><i class="fas fa-undo-alt"></i> Regresar</a>
</p>
