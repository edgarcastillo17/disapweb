<!-- Vendor CSS Files -->
<link href="~/Content/home/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/home/icofont.min.css" rel="stylesheet">
<link href="~/Content/home/boxicons.min.css" rel="stylesheet">
<link href="~/Content/home/remixicon.css" rel="stylesheet">
<link href="~/Content/home/venobox.css" rel="stylesheet">
<link href="~/Content/home/owl.carousel.min.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/Content/home/style.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Content/layout/sb-admin-2.css" rel="stylesheet">
@if (!User.Identity.IsAuthenticated)
{
    <link href="~/Content/Site.css" rel="stylesheet" />
}

<div class="espacio">
    <div class="card text-center">
        <div class="card-header bg-success text-white">
            ¡Conoce nuestros productos más baratos!
        </div>
        <div class="card-body shadow">
            <img src="~/Images/accesibles.png" alt="Alternate Text" />
            <div class="row justify-content-center">
                @foreach (var item in ViewBag.Cheap)
                {
                    if (item.Type == "Bebida caliente")
                    {
                        <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                            <img class="card-img-top" src="@Url.Action("GetImage","Products", new { id = item.Id})" alt="Alternate Text" />
                            <div class="card border-bottom-success shadow">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">$@item.Price</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.ProductName</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fab fa-hotjar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    if (item.Type == "Bebida fría")
                    {
                        <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                            <img class="card-img-top" src="@Url.Action("GetImage","Products", new { item.Id})" alt="Alternate Text" />
                            <div class="card border-bottom-success shadow">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">$@item.Price</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.ProductName</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-cubes fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    if (item.Type == "Alimento")
                    {
                        <div class="mb-3 margin-card" style="width: 15rem; margin:0.5rem;">
                            <img class="card-img-top" src="@Url.Action("GetImage","Products", new { item.Id})" alt="Alternate Text" />
                            <div class="card border-bottom-success shadow">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">$@item.Price</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@item.ProductName</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-utensils fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <br />
    <br />
    <div class="row justify-content-center">
        <h2>¡Disfruta del menú completo!</h2>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Create", "Products")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Añadir</a>
    }
    else
    {
        <a href="@Url.Action("Create", "Purchases")" class="btn btn-sm btn-success"><i class="fas fa-shopping-cart"></i> ¡Comprar!</a>
    }
    <br />
    <br />

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            if (item.Type == "Bebida caliente")
            {
                <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                    <img class="card-img-top" src="@Url.Action("GetImage","Products", new { id = item.Id})" alt="Alternate Text" />
                    <div class="card border-bottom-success shadow">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@Html.DisplayFor(modelItem => item.ProductName)</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Html.DisplayFor(modelItem => item.Price)</div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <hr />
                                        <a class="btn btn-sm btn-success" href="@Url.Action("Details","Products", new { id=item.Id})">Detalles</a>
                                    }
                                </div>
                                <div class="col-auto">
                                    <i class="fab fa-hotjar fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (@item.Type == "Bebida fría")
            {
                <div class="mb-3" style="width: 15rem; margin:0.5rem;">
                    <img class="card-img-top" src="@Url.Action("GetImage","Products", new { id = item.Id})" alt="Alternate Text" />
                    <div class="card border-bottom-success shadow">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@Html.DisplayFor(modelItem => item.ProductName)</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Html.DisplayFor(modelItem => item.Price)</div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <hr />
                                        <a class="btn btn-sm btn-success" href="@Url.Action("Details","Products", new { id=item.Id})">Detalles</a>
                                    }
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-cubes fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (@item.Type == "Alimento")
            {
                <div class="mb-3 margin-card" style="width: 15rem; margin:0.5rem;">
                    <img class="card-img-top" src="@Url.Action("GetImage","Products", new { id = item.Id})" alt="Alternate Text" />
                    <div class="card border-bottom-success shadow">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@Html.DisplayFor(modelItem => item.ProductName)</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">$@Html.DisplayFor(modelItem => item.Price)</div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <hr />
                                        <a class="btn btn-sm btn-success" href="@Url.Action("Details","Products", new { id=item.Id})">Detalles</a>
                                    }
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-utensils fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>

@if (!User.Identity.IsAuthenticated)
{
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container-fluid">
            <h3>Winmer</h3>
            <div class="social-links">
                <a href="https://twitter.com/" target="_blank" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="https://www.facebook.com/" target="_blank" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="https://www.instagram.com/" target="_blank" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="https://mx.linkedin.com/" target="_blank" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
            <div class="copyright">
                &copy; Winmer: <strong><span>Castillo Medina</span></strong>.
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
}

