@model Cafeteria.Models.Purchase

<link href="~/Content/layout/sb-admin-2.css" rel="stylesheet" />

@{
    ViewBag.Title = "Delete";
}

<div class="row justify-content-center">
    <div class="card" style="width:25rem; margin:1rem;">
        <div class="card-header text-center bg-danger text-white">¿Seguro que deseas eliminar la Nota No. @Model.Id?</div>
        <div class="card-body">
            <table>
                <tr>
                    <td class="font-weight-bold font-italic text-danger">Cliente: </td>
                    <td> @Model.ClientName</td>
                </tr>
                <tr>
                    <td class="font-weight-bold font-italic text-danger">Cantidad: </td>
                    <td> @Model.Quantity</td>
                </tr>
                <tr>
                    <td class="font-weight-bold font-italic text-danger">Total: </td>
                    <td> @Model.Total</td>
                </tr>
                <tr>
                    <td class="font-weight-bold font-italic text-danger">Comentario: </td>
                    <td> @Model.Comment</td>
                </tr>
                <tr>
                    <td class="font-weight-bold font-italic text-danger">Estatus: </td>
                    <td> @Model.Status</td>
                </tr>
                <tr>
                </tr>
            </table>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-center">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a href="@Url.Action("Index", "Purchases")" class="btn btn-sm btn-dark text-white" style="margin: 0.5rem;"><i class="fas fa-fast-backward"></i> Regresar</a>
            </div>
        }
    </div>
</div>
