@model ControlInventario.Models.Supplier

@{
    ViewBag.Title = "Proveedores";
}

    <div class="espacio">
        <h2>Eliminar</h2>

        <h3>¿Seguro que desea borrar?</h3>
        <div>
            <h4>Proveedores</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.SupplierCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SupplierCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SupplierName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SupplierName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input class="btn btn-sm btn-outline-danger" type="submit" value="Eliminar"/>
                    <a href="@Url.Action("Index", "Suppliers")" class="btn btn-sm btn-outline-dark">Regresar</a>
                </div>
            }
        </div>
    </div>
