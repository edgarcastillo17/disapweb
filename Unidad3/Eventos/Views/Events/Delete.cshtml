@model Eventos.Models.Event

@{
    ViewBag.Title = "Eventos";
}

<div class="row col-md-12">
    <div class="col-md-12 col-md-offset-3">
        <br />
        <h3 class="text-center">Eliminar</h3>
    </div>
</div>

<h3>Evento</h3>

<div>
    <h5>¿Seguro que deseas eliminar?</h5>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Tipo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Fecha:
        </dt>

        <dd>
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.Date))
        </dd>

        <dt>
            Lugar:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Place)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm" />
            <a href="@Url.Action("Index","Events")" class="btn btn-outline-dark btn-sm"><i class="fas fa-undo-alt"></i> Regresar</a>
        </div>
    }
</div>
