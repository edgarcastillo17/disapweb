                                @if (User.Identity.IsAuthenticated)
                                {
                                    <hr />
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Details","Products", new { id=item.Id})">Detalles</a>
                                }
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-cubes fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        if (item.Product.Type == "Alimento")
        {
            <div class="mb-3 margin-card" style="width: 15rem; margin:0.5rem;">
                <img class="card-img-top" src="@Url.Action("GetImage","Products", new { item.Product.Id})" alt="Alternate Text" />
