@model Eventos.Models.Event

@{
    ViewBag.Title = "Eventos";
}

<div class="row col-md-12">
    <div class="col-md-12 col-md-offset-3">
        <br />
        <h3 class="text-center">Detalles</h3>
    </div>
</div>

<div>
    <h5>Información del Evento</h5>
    <hr />

    <div class="container">
        <dl class="dl-horizontal">
            <dt>
                Nombre:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Tipo:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt>
                Fecha:
            </dt>

            <dd>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.Date))
            </dd>

            <dt>
                Lugar:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Place)
            </dd>
        </dl>
    </div>
</div>

<p>
    <a href="@Url.Action("Edit","Events",new { id = Model.Id })" class="btn btn-outline-primary btn-sm"><i class="fas fa-pencil-alt"></i> Editar</a>
    <a href="@Url.Action("Index","Events")" class="btn btn-outline-dark btn-sm"><i class="fas fa-undo-alt"></i> Regresar</a>
</p>
