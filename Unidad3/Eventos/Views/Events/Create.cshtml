@model Eventos.Models.Event

@{
    ViewBag.Title = "Eventos";
}

<div class="row col-md-12">
    <div class="col-md-12 col-md-offset-3">
        <br />
        <h3 class="text-center">Crear</h3>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h5>Añadir nuevo evento</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <p class="control-label col-md-2 font-weight-bold">Nombre:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <p class="control-label col-md-2 font-weight-bold">Tipo:</p>
            <div class="col-md-10">
                <select class="form-control" name="Type">
                    <option>Selecciona un tipo...</option>
                    <option value="Social">Social</option>
                    <option value="Cultural">Cultural</option>
                    <option value="Deportivo">Deportivo</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <p class="control-label col-md-2 font-weight-bold">Fecha:</p>
            <div class="col-md-10">
                <input type="date" name="Date" value="" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <p class="control-label col-md-2 font-weight-bold">Lugar:</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <p class="control-label col-md-2 font-weight-bold">Ciudad:</p>
            <div class="col-md-10">
                <select name="CityId" class="form-control">
                    <option>Selecciona una ciudad...</option>
                    @foreach (var item in ViewBag.Ciudades)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-outline-primary btn-sm" />
                <a href="@Url.Action("Index","Events")" class="btn btn-outline-dark btn-sm"><i class="fas fa-undo-alt"></i> Regresar</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
